# LeadDrip Environment Variables

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# LLM Provider Configuration
# Options: openai | anthropic
LLM_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Search Provider Configuration
# Options: tavily | serpapi | bing
SEARCH_PROVIDER=tavily
TAVILY_API_KEY=your_tavily_api_key
SERPAPI_KEY=your_serpapi_key
BING_SEARCH_KEY=your_bing_search_key

# Firecrawl - for company research and website scraping
FIRECRAWL_API_KEY=your_firecrawl_api_key

# Optional: SendGrid for email digests
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@leaddrip.com

# Application Settings
NEXT_PUBLIC_APP_URL=http://localhost:3000
CRON_SECRET=your_cron_secret_for_vercel

# Demo Mode (set to true if API keys missing)
DEMO_MODE=false
