  "_tuningNotes": {
    "description": "Notes on adjusting weights based on observed performance",
    "falsePositiveIndicators": [
      "If seeing too many unverified signals pass, increase confidenceThresholds.verified",
      "If specific source types produce bad signals, lower their sourceTypeWeights",
      "If old articles causing issues, reduce recencyDecay.halfLifeDays"
    ],
    "falseNegativeIndicators": [
      "If good signals are being discarded, lower confidenceThresholds.watchlist",
      "If official sources are being underweighted, increase their sourceTypeWeights",
      "If recent articles are not getting enough weight, increase recencyDecay.halfLifeDays"
    ],
    "calibrationProcess": [
      "1. Run verification on a sample of 50-100 signals",
      "2. Manually label each as true/false positive",
      "3. Calculate precision/recall at current thresholds",
      "4. Adjust thresholds to optimize F1 score",
      "5. Review per-source-type accuracy and adjust weights",
      "6. Re-run and iterate"
    ]
  }
